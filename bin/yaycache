#!/usr/bin/env bash

yay_cache="$(yay -Pg | jq -r .buildDir)"
pacman_cache='/var/cache/pacman/pkg'

echo "Cache dirs:"
echo "  $pacman_cache"
echo "  $yay_cache"

mapfile -t pkgdirs < <(find "$yay_cache" -maxdepth 1 -mindepth 1 -type d)
pkgidr+=(/var/cache/pacman/pkg)

paccache -rvk2 "${pkgdirs[@]/#/-c}"
