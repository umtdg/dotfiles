import = ["/home/ahsoka/.config/alacritty/theme.toml"]
live_config_reload = true

[env]
TERM = "xterm-256color"

[font]
size = 7

[font.bold]
family = "MesloLGS NF"
style = "Bold"

[font.italic]
family = "MesloLGS NF"
style = "Italic"

[font.normal]
family = "MesloLGS NF"
style = "Regular"

[shell]
program = "/bin/zsh"

[window]
dynamic_title = true
opacity = 0.8

[window.padding]
x = 5
y = 5
