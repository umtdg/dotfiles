[general]
import = ["~/.config/alacritty/theme.toml"]
live_config_reload = true

[env]
TERM = "xterm-256color"

[font]
size = 9

[font.bold]
family = "MesloLGS NF"
style = "Bold"

[font.italic]
family = "MesloLGS NF"
style = "Italic"

[font.normal]
family = "MesloLGS NF"
style = "Regular"

[terminal]
shell = "/bin/zsh"

[window]
dynamic_title = true

[window.padding]
x = 5
y = 5
